package nLayeredDemo;

import nLayeredDemo.business.abstracts.ProductService;
import nLayeredDemo.business.concretes.ProductManager;
import nLayeredDemo.dataAccess.concretes.AbcProductDao;
import nLayeredDemo.dataAccess.concretes.HibernateProductDao;
import nLayeredDemo.entities.concretes.Product;

public class Main {

	public static void main(String[] args) {
		//spring IoC ile çözülecek
		ProductService productService=new ProductManager(new AbcProductDao(),new );//gerçek servislerde
		//interface ile baðlantý kurulur bu yüzden productservice kullandýk sað tarafta
		Product product=new Product(1,"elma",3,10,50);
		productService.add(product);
	}

}
